<% @posts.each do |post|  %>
  <div class="row"> 
    <div class="col-sm-12">
      <h2><%= post.title %></h2>
      <%= simple_format post.description %>
      <div>
        <span class="badge badge-warning">
          <%= post.category.title %>
          <%= link_to post.category.title, category_search_path(post.category.slug) %>
        </span>
      </div>
    </div>
  </div>
  <hr/>
<%end%>